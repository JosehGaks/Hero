
{{#partial "content"}}
    <p>{{ hero.name}}</p>
    <p>{{hero.age}}</p>
    <p>{{hero.superPower}}</p>
    <p>{{hero.weakness}}</p>
    <p>squad of this hero:{{squad.name}}</p>
    <h5>
        {{#if hero.published }}
                    <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Completed
        {{else}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Open
        {{/if}}
    </h5>
    <p>
        <a href="/tasks/{{hero.id}}/update">Edit this hero</a><br>
        <a href="/tasks/{{hero.id}}/delete">DELETE this hero(no undo)</a>
    </p>

{{/partial}}

{{> layout.hbs}}