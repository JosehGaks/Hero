
{{#partial "content"}}

    {{#if editTask}}
        <h1>Edit this Post!</h1>
        <form action="/heroes/{{hero.id}}" method="post">


                <label for="name">hero name</label>
                <input id="name" name="name" type="text" value="{{hero.name}}">

                <label for="age">age</label>
                <input id="age" name="age" type="number" value="{{hero.age}}">

                <label for="specialPower">special power</label>
                <input id="specialPower" name="specialPower" type="text" value="{{hero.specialPower}}">

                <label for="weakness">weakness</label>
                <input id="weakness" name="weakness" type="text" value="{{hero.weakness}}">

            <label for="squadId">update this hero's category: </label>
            <select name="squadId" id="squadId">
                {{#each squads}}
                        <option value="{{id}}">
                            {{name}}
                        </option>
                {{/each}}

            </select>
            <p>Dont see the right squad <a href="/squads/new">Add a new one first.</a></p>
            <button type="submit">go!</button>
        </form>


    {{else}}
            <h1>Add a new Hero!</h1>


            <form action="/heroes" method="post">

                <label for="name">hero name</label>
                <input id="name" name="name" type="text">

                <label for="age">age</label>
                <input id="age" name="age" type="number">

                <label for="specialPower">special power</label>
                <input id="specialPower" name="specialPower" type="text">

                <label for="weakness">weakness</label>
                <input id="weakness" name="weakness" type="text">
                <label for="squadId">add to squad: </label>
                <select name="squadId" id="squadId">
                    {{#each squads}}
                        <option value="{{id}}">
                            {{name}}
                        </option>
                    {{/each}}

                </select>
                <p>Don't see the right squad <a href="/squads/new">Add a new one first.</a></p>


    {{/if}}
        <button type="submit" class="btn btn-default">Go!</button>
    </form>

{{/partial}}

{{> layout.hbs}}