
{{#partial "content"}}

    {{#if editTask}}
        <h1>Edit this Post!</h1>
        <form action="/heroes/{{editTask.id}}" method="post">


                <label for="name">hero name</label>
                <input id="name" name="name" type="text" value="{{editHero.name}}">

                <label for="age">age</label>
                <input id="age" name="age" type="number" value="{{editHero.age}}">

                <label for="specialPower">special power</label>
                <input id="specialPower" name="specialPower" type="text" value="{{editHero.specialPower}}">

                <label for="weakness">weakness</label>
                <input id="weakness" name="weakness" type="text" value="{{editHero.weakness}}">
        </form>


    {{else}}
            <h1>Add a new Hero!</h1>


            <form action="/heroes" method="post">

                <label for="name">hero name</label>
                <input id="name" name="name" type="text">

                <label for="age">age</label>
                <input id="age" name="age" type="number">

                <label for="specialPower">special power</label>
                <input id="specialPower" name="specialPower" type="text">

                <label for="weakness">weakness</label>
                <input id="weakness" name="weakness" type="text">

                <button type="submit" class="btn btn-default">add hero</button>


    {{/if}}
        <button type="submit" class="btn btn-default">Go!</button>
    </form>

{{/partial}}

